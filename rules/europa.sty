    \GTid{period}
    \GTpos{west border|-pagepage.south}{0pt,-2pt}{north west}
    \GT[Table Period #1]{\gtid}{#3}
    \csname#1Period\endcsname
    \GTsimpledecorate

    \GTid{turn}
    \GTpos{lastbox.south west}{0pt,-2pt}{north west}
    \GT[Table Turn #1]{\gtid}{#3}
    \csname#1Turn\endcsname
    \GTsimpledecorate

