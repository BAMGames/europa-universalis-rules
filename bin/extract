        $command.=str($k->{"Country"});
        $command.="true";
        $command.=str($k->{"Country"});
        $command.=" dessineLD\n";
    }
    if (($k->{"Active"} & 2)==2) {
        $command.=str($k->{"Country"});
        $command.=str($k->{"Religion"});
        $command.="(4)(50)(2)(4)(5)(8)(*)(10)(Indep) dessineDIPLOMATIE\n";
    }
    $command.=str($k->{"Country"});
    $command.="()0 dessinePOSSESSION\n";

    $command.=str($k->{"Country"});
    $command.=" dessineCONTROLE\n";

    sendit($k,$command);
}
