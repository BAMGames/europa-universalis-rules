#!/usr/bin/perl
@files=@ARGV;
%info=();
@roman=("0","I","II","III","IV","V","VI","VII","VIII","IX","X","XI","XII","XIII","XIV","XV","XVI","XVII","XVIII","XIX","XX");
foreach $file (@files) {
    open FILE,$file;
    while ($line=<FILE>) {
	chomp $line;
	next if ($line=~/^$/);
	next if ($line=~/^##/);
	if ($line=~/^#/) {
	    @fieldname=split(/;/,$line);
	    $fieldname[0]=~s/^#//g;
	    next;
	}
	@linevalue=split(/;/,$line);
	$elt={};
	foreach $i (0..scalar(@linevalue)-1) {
	    die "Trying to affect value #$i ($linevalue[$i]) to null-field in $line\n" unless $fieldname[$i];
	    $elt->{$fieldname[$i]}=$linevalue[$i];
	}
	# Type is mandatory
	$type=$elt->{"Type"};
	$infotype="info".$type;
	push @{$infotype},$elt;
	$info{$type}++;
    }
    close FILE;
}
$commands="";

sub str {
    return "(".$_[0].")";
}
sub boolnum {
    return "$_[0]";
}
sub extractname {
    while (@_) {
	if ($_[0]) {
	    return "$_[0]";
	}
	shift;
    }
}

sub sendit {
    $command=$_[1];
    @comm=split(/\n/,$command);
    foreach $u (@comm) {
	chomp $u;
	$u =~ /^.*dessine([A-Z]*)$/;
	$type=$1;
	$commands{$type}.="$u\n";
    }
}
sub dropit {
    foreach $k (sort keys %commands) {
	print $commands{$k};
    }
}
foreach $k (@infoARMY) {
    $command=str($k->{"Country"});
    if ($k->{"Name"}) {
        $command.=str($k->{"Name"});
    } else {
        $command.="(Army)";
    }
    $command.=str($k->{"Class"});
    $command.=" dessineARMY\n";
    sendit($k,$command);
}
delete $info{"ARMY"};
