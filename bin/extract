    $command.=" (".$k->{"NameC"}.")" if $k->{"NameC"};
    $command.=")";
    $command.=str($k->{"LD"});
    $command.=str($pacha_number);
    $pacha_number+=1;
    $command.=str($k->{"Stats"});
    $command.=" dessinePACHA\n";
