#!/bin/sh
if [ "$1" = "--tex" ]; then
    TEX=1
    shift
fi
if [ "$TEX" = 1 ]; then
    printf '\\global\\def\\release{r. '
fi
grep ^release= "${HOMEDIR}/doc/release.txt"|cut -f2 -d=|xargs printf
printf "%s" .
LC_ALL=C svn info "${HOMEDIR}"| grep ^Revision:|cut -f2 -d' '|xargs printf
a=$(svn status ${HOMEDIR}|grep -v \?|wc -l |xargs printf); if [ "$a" -gt 0 ]; then printf "+$a"; fi
${BINDIR}/displaybranch
if [ "$TEX" = 1 ]; then
    printf '}'
fi
printf '\n'
exit 0
