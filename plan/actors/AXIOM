#!/bin/sh
if [ "$AXIOMSKIP" = 1 ]; then
    exit 0
fi
if [ -z "$AXIOMDEBUG" ]; then
    while [ "$1" ]; do
        if [ ! -f "$1" ]; then
            echo "${SPECIALPREFIX}failed:$1" 1>&2
            exit 1
        fi
        shift
    done
fi
if [ "$AXIOMDEBUG" = 2 ]; then
    while [ "$1" ]; do
        if [ ! -f "$1" ]; then
            echo "${SPECIALPREFIX}failed:$1" 1>&2
            exit 1
        else
            if git status --porcelain "$1" | grep -q '^??'; then
                echo "${SPECIALPREFIX}failed:$1" 1>&2
            else
                echo "${SPECIALPREFIX}${1}" 1>&2
            fi
        fi
        shift
    done
fi

exit 0
